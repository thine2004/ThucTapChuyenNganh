<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Tài nguyên học tập</h6>
            <h1 class="mb-5">Kho {{type}}</h1>
        </div>
        <div class="row g-4">
            {{#each resources}}
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="service-item text-center pt-3">
                    <div class="p-4">
                        <i class="fa fa-3x {{#if_eq ../type 'Grammar'}}fa-spell-check text-primary{{else}}fa-font text-success{{/if_eq}} mb-4"></i>
                        <h5 class="mb-3">{{this.title}}</h5>
                        <p class="text-muted small">Cập nhật: {{this.createdAt}}</p>
                        <a href="/resources/{{this._id}}" class="btn btn-outline-primary rounded-pill px-4 mt-2">Xem chi tiết</a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-12 text-center py-5">
                <p class="text-muted">Chưa có nội dung nào trong kho này.</p>
            </div>
            {{/each}}
        </div>
    </div>
</div>
