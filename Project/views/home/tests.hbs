<div class="container-xxl py-5">
    <div class="container">
        {{#if isPortal}}
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Luyện thi Online</h6>
            <h1 class="mb-5">Chương trình Thi thử chuyên sâu</h1>
            <p class="text-muted mb-5">Vui lòng đăng ký khóa học tương ứng để mở khóa các bộ đề thi thử bám sát đề thực tế.</p>
        </div>

        <!-- Exam Categories Grid -->
        <div class="row g-4 mb-5">
            {{!-- TOEIC Card --}}
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="service-item text-center pt-3 shadow-sm border rounded">
                    <div class="p-4">
                        <i class="fa fa-3x fa-medal text-primary mb-4"></i>
                        <h5 class="mb-3">Luyện thi TOEIC</h5>
                        <p>Đề thi bám sát cấu trúc đề TOEIC mới nhất với đầy đủ các phần Reading & Listening.</p>
                        {{#if (includes unlockedCategories 'TOEIC')}}
                            <a href="/toeic" class="btn btn-primary rounded-pill px-4">Truy cập ngay</a>
                        {{else if (eq user.role 'admin')}}
                             <a href="/toeic" class="btn btn-primary rounded-pill px-4">Admin Truy cập</a>
                        {{else}}
                            <a href="/courses" class="btn btn-outline-secondary rounded-pill px-4"><i class="fa fa-lock me-2"></i>Mua khóa học</a>
                        {{/if}}
                    </div>
                </div>
            </div>

            {{!-- IELTS Card --}}
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="service-item text-center pt-3 shadow-sm border rounded">
                    <div class="p-4">
                        <i class="fa fa-3x fa-globe text-primary mb-4"></i>
                        <h5 class="mb-3">Luyện thi IELTS</h5>
                        <p>Hệ thống đề thi IELTS Academic và General đầy đủ các kỹ năng bài tập thực tế.</p>
                        {{#if (includes unlockedCategories 'IELTS')}}
                            <a href="/ielts" class="btn btn-primary rounded-pill px-4">Truy cập ngay</a>
                        {{else if (eq user.role 'admin')}}
                            <a href="/ielts" class="btn btn-primary rounded-pill px-4">Admin Truy cập</a>
                        {{else}}
                            <a href="/courses" class="btn btn-outline-secondary rounded-pill px-4"><i class="fa fa-lock me-2"></i>Mua khóa học</a>
                        {{/if}}
                    </div>
                </div>
            </div>

            {{!-- TOEFL Card --}}
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="service-item text-center pt-3 shadow-sm border rounded">
                    <div class="p-4">
                        <i class="fa fa-3x fa-award text-primary mb-4"></i>
                        <h5 class="mb-3">Luyện thi TOEFL</h5>
                        <p>Bộ câu hỏi mô phỏng đề thi TOEFL iBT quốc tế giúp bạn chinh phục điểm số mục tiêu.</p>
                        {{#if (includes unlockedCategories 'TOEFL')}}
                            <a href="/toefl" class="btn btn-primary rounded-pill px-4">Truy cập ngay</a>
                         {{else if (eq user.role 'admin')}}
                            <a href="/toefl" class="btn btn-primary rounded-pill px-4">Admin Truy cập</a>
                        {{else}}
                            <a href="/courses" class="btn btn-outline-secondary rounded-pill px-4"><i class="fa fa-lock me-2"></i>Mua khóa học</a>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-5">

        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h2 class="mb-4">Đề thi miễn phí</h2>
        </div>
        {{else}}
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Thư viện Đề thi</h6>
            <h1 class="mb-5">{{title}}</h1>
            <a href="/tests" class="btn btn-outline-primary mb-5"><i class="fa fa-arrow-left me-2"></i>Quay lại Cổng luyện thi</a>
        </div>
        {{/if}}

        <div class="row g-4 justify-content-center">
            {{#each tests}}
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="course-item bg-light">
                    <div class="position-relative overflow-hidden">
                        <img class="img-fluid" src="/img/cat-1.jpg" alt="">
                        <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                            {{#if (or this.isFree (includes ../unlockedCategories this.category.name) (eq ../user.role 'admin'))}}
                                <a href="/tests/{{this._id}}" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 30px;">Làm bài ngay</a>
                            {{else}}
                                <a href="/courses" class="flex-shrink-0 btn btn-sm btn-secondary px-3" style="border-radius: 30px;"><i class="fa fa-lock me-1"></i>Mở khóa</a>
                            {{/if}}
                        </div>
                    </div>
                    <div class="text-center p-4 pb-0">
                        <h3 class="mb-0">{{this.title}}</h3>
                        <p class="text-primary">{{this.category.name}}</p>
                    </div>
                    <div class="d-flex border-top">
                        <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>{{this.duration}} phút</small>
                        <small class="flex-fill text-center py-2"><i class="fa fa-question-circle text-primary me-2"></i>{{this.questions.length}} câu</small>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-12 text-center">
                <p>Hiện chưa có đề thi nào được kích hoạt.</p>
            </div>
            {{/each}}
        </div>
    </div>
</div>
