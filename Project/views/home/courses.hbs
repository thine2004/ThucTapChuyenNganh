<!-- Shop Controls -->
<div class="container-xxl py-3">
    <div class="container">
        <form action="/courses" method="GET" id="filterForm">
        <div class="row g-3 align-items-center">
            <div class="col-lg-6">
                <div class="d-flex align-items-center">
                    <span class="me-3">Sắp xếp theo:</span>
                    <select name="sort" class="form-select" style="width: auto;" onchange="this.form.submit()">
                        <option value="popularity" {{#if (eq filters.sort 'popularity')}}selected{{/if}}>Độ phổ biến</option>
                        <option value="price-asc" {{#if (eq filters.sort 'price-asc')}}selected{{/if}}>Giá: Thấp đến Cao</option>
                        <option value="price-desc" {{#if (eq filters.sort 'price-desc')}}selected{{/if}}>Giá: Cao đến Thấp</option>
                        <option value="latest" {{#if (or (eq filters.sort 'latest') (not filters.sort))}}selected{{/if}}>Mới nhất</option>
                        <option value="rating" {{#if (eq filters.sort 'rating')}}selected{{/if}}>Đánh giá cao nhất</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-6 text-end">
                <div class="d-flex justify-content-end align-items-center">
                     <div class="input-group" style="width: 250px;">
                        <input type="text" name="search" class="form-control" placeholder="Tìm khóa học..." value="{{filters.search}}">
                        <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Courses Grid -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-4">
            <!-- Sidebar Filters -->
            <div class="col-lg-3">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Bộ lọc</h5>
                    </div>
                    <div class="card-body">
                        <!-- Price Filter -->
                        <div class="mb-4">
                            <h6 class="mb-3">Khoảng giá</h6>
                            <div class="d-flex justify-content-between mb-2">
                                <span id="minPriceDisplay">{{#if filters.minPrice}}{{filters.minPrice}}{{else}}0{{/if}}₫</span>
                                <span id="maxPriceDisplay">{{#if filters.maxPrice}}{{filters.maxPrice}}{{else}}10.000.000{{/if}}₫</span>
                            </div>
                            <input type="range" name="maxPrice" class="form-range" min="0" max="10000000" step="500000" value="{{#if filters.maxPrice}}{{filters.maxPrice}}{{else}}10000000{{/if}}" oninput="document.getElementById('maxPriceDisplay').innerText = Number(this.value).toLocaleString('vi-VN') + '₫'">
                            <input type="hidden" name="minPrice" value="0">
                        </div>

                        <!-- Exam Type Filter -->
                        <div class="mb-4">
                            <h6 class="mb-3">Loại bài thi</h6>
                            {{#each categories}}
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="category" value="{{this._id}}" id="cat-{{this._id}}" {{#if (isIn this._id ../filters.category)}}checked{{/if}}>
                                <label class="form-check-label" for="cat-{{this._id}}">{{this.name}}</label>
                            </div>
                            {{/each}}
                        </div>

                        <!-- Level Filter -->
                        <div class="mb-4">
                            <h6 class="mb-3">Trình độ</h6>
                            {{#each levels}}
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="level" value="{{this}}" id="lvl-{{this}}" {{#if (isIn this ../filters.level)}}checked{{/if}}>
                                <label class="form-check-label" for="lvl-{{this}}">
                                    {{#if_eq this 'beginner'}}Cơ bản
                                    {{else if_eq this 'intermediate'}}Trung cấp
                                    {{else if_eq this 'advanced'}}Nâng cao
                                    {{else}}{{capitalize this}}
                                    {{/if_eq}}
                                </label>
                            </div>
                            {{/each}}
                        </div>

                        <!-- Format Filter -->
                        <div class="mb-4">
                            <h6 class="mb-3">Hình thức học</h6>
                            {{#each methods}}
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="method" value="{{this}}" id="meth-{{this}}" {{#if (isIn this ../filters.method)}}checked{{/if}}>
                                <label class="form-check-label" for="meth-{{this}}">
                                    {{#if_eq this 'online'}}Online
                                    {{else if_eq this 'offline'}}Offline
                                    {{else if_eq this 'hybrid'}}Kết hợp
                                    {{else}}{{capitalize this}}
                                    {{/if_eq}}
                                </label>
                            </div>
                            {{/each}}
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Áp dụng bộ lọc</button>
                        <a href="/courses" class="btn btn-outline-secondary w-100 mt-2">Xóa bộ lọc</a>
                    </div>
                </div>
                </form>

                <!-- Special Offers -->
                <div class="card border-0 shadow-sm d-none d-lg-block">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="mb-0">Ưu đãi đặc biệt</h6>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-success mb-3">
                            <small><strong>Giảm 15%</strong> khi đăng ký 2 khóa học</small>
                        </div>
                        <div class="alert alert-info mb-0">
                            <small><strong>Học thử miễn phí</strong> buổi đầu tiên</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Courses Grid -->
            <div class="col-lg-9">
                <div class="row g-4">
                    {{#each courses}}
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="course-item bg-light position-relative h-100 d-flex flex-column">
                            <div class="position-relative overflow-hidden">
                                <img class="img-fluid" src="{{this.thumbnail}}" alt="{{this.title}}" style="height: 200px; width: 100%; object-fit: cover;">
                                
                                {{!-- Status Badge --}}
                                {{statusBadge this.status}}
                                
                                {{!-- Discount Badge --}}
                                {{#if this.originalPrice}}
                                <div class="bg-danger text-white position-absolute top-0 end-0 m-3 py-1 px-2">
                                    <small>GIẢM GIÁ</small>
                                </div>
                                {{/if}}
                                
                                <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                    <a href="/courses/{{this._id}}" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Chi tiết</a>
                                    {{#if_eq this.status 'available'}}
                                    <form action="/cart/add/{{this._id}}" method="POST" class="flex-shrink-0 m-0 p-0">
                                        <button type="submit" class="btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">
                                            <i class="fa fa-shopping-cart"></i>
                                        </button>
                                    </form>
                                    {{else}}
                                    <button class="btn btn-sm btn-secondary px-3" style="border-radius: 0 30px 30px 0;" disabled>
                                        <i class="fa fa-ban"></i>
                                    </button>
                                    {{/if_eq}}
                                </div>
                            </div>
                            <div class="text-center p-4 pb-0 flex-grow-1">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h3 class="mb-0 text-primary">{{formatCurrency this.price}}</h3>
                                    {{#if this.originalPrice}}
                                    <small class="text-muted"><del>{{formatCurrency this.originalPrice}}</del></small>
                                    {{/if}}
                                </div>
                                <div class="mb-3">
                                    {{#each (range 1 5)}}
                                        <small class="fa fa-star {{#if (lte this ../averageRating)}}text-warning{{else}}text-muted{{/if}}"></small>
                                    {{/each}}
                                    <small class="ms-1">({{this.averageRating}})</small>
                                </div>
                                <h5 class="mb-4">{{this.title}}</h5>
                            </div>
                            <div class="d-flex border-top">
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>{{this.duration}} phút</small>
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-video text-primary me-2"></i>{{courseMethod this.teachingMethod}}</small>
                                <small class="flex-fill text-center py-2"><i class="fa fa-layer-group text-primary me-2"></i>{{courseLevel this.level}}</small>
                            </div>
                        </div>
                    </div>
                    {{else}}
                    <div class="col-12 text-center py-5">
                        <img src="/img/no-results.png" alt="No results" style="width: 150px; opacity: 0.5;">
                        <p class="mt-3 text-muted">Không tìm thấy khóa học nào phù hợp với bộ lọc của bạn.</p>
                        <a href="/courses" class="btn btn-primary">Xem tất cả khóa học</a>
                    </div>
                    {{/each}}
                </div>

                <!-- Pagination (Mockup) -->
                {{#if courses.length}}
                <nav aria-label="Page navigation" class="mt-5">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Trước</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Tiếp</a>
                        </li>
                    </ul>
                </nav>
                {{/if}}
            </div>
        </div>
    </div>
</div>