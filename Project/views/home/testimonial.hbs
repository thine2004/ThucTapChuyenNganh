<!-- Testimonial Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="text-center">
            <h6 class="section-title bg-white text-center text-primary px-3">Câu Chuyện Thành Công</h6>
            <h1 class="mb-5">Học Viên Nói Gì Về Chúng Tôi!</h1>
            <p class="mb-5">Khám phá những câu chuyện truyền cảm hứng từ học viên đã đạt được mục tiêu tiếng Anh cùng EnglishMaster</p>
        </div>
        <div class="row g-4 justify-content-center">
            {{#each reviews}}
            <div class="col-lg-4 col-md-6">
                <div class="testimonial-item text-center bg-light p-4 h-100">
                    <img class="border rounded-circle p-2 mx-auto mb-3" src="https://ui-avatars.com/api/?name={{this.user.firstName}}+{{this.user.lastName}}&background=random" style="width: 80px; height: 80px;">
                    <h5 class="mb-0">{{this.user.firstName}} {{this.user.lastName}}</h5>
                    <div class="mb-3 text-primary">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </div>
                    <p class="mb-0">"{{this.comment}}"</p>
                </div>
            </div>
            {{else}}
            <div class="col-12 text-center">
                <p class="text-muted">Hiện chưa có đánh giá nào. Hãy là người đầu tiên!</p>
            </div>
            {{/each}}
        </div>

        <!-- Add Website Review Form -->
        <div class="row justify-content-center mt-5">
            <div class="col-lg-8">
                <div class="bg-light p-5 rounded shadow-sm text-center">
                    <h3 class="mb-4">Chia sẻ cảm nhận của bạn</h3>
                    <p class="mb-4">Góp ý của bạn giúp EnglishMaster ngày càng hoàn thiện hơn!</p>
                    
                    {{#if isLoggedIn}}
                    <form action="/reviews" method="POST" class="text-start">
                        <input type="hidden" name="type" value="website">
                        <div class="row g-3">
                            <div class="col-12 text-center">
                                <label class="form-label d-block text-muted">Xếp hạng website</label>
                                <div class="btn-group" role="group">
                                    <input type="radio" class="btn-check" name="rating" id="rate5" value="5" checked>
                                    <label class="btn btn-outline-primary" for="rate5">5 ★</label>
                                    <input type="radio" class="btn-check" name="rating" id="rate4" value="4">
                                    <label class="btn btn-outline-primary" for="rate4">4 ★</label>
                                    <input type="radio" class="btn-check" name="rating" id="rate3" value="3">
                                    <label class="btn btn-outline-primary" for="rate3">3 ★</label>
                                    <input type="radio" class="btn-check" name="rating" id="rate2" value="2">
                                    <label class="btn btn-outline-primary" for="rate2">2 ★</label>
                                    <input type="radio" class="btn-check" name="rating" id="rate1" value="1">
                                    <label class="btn btn-outline-primary" for="rate1">1 ★</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <textarea class="form-control border-0 shadow-sm" name="comment" rows="4" placeholder="Lời nhắn hoặc góp ý của bạn..." required></textarea>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Gửi Đánh Giá Ngay</button>
                            </div>
                        </div>
                    </form>
                    {{else}}
                    <div class="p-3">
                        <p class="mb-4">Vui lòng đăng nhập để gửi góp ý và đánh giá cho trung tâm.</p>
                        <a href="/login" class="btn btn-primary px-5 py-3">Đăng nhập ngay</a>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial End -->