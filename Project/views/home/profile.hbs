<div class="container py-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <img src="https://ui-avatars.com/api/?name={{user.firstName}}+{{user.lastName}}&background=random&size=150" alt="Avatar" class="rounded-circle mb-3">
                    <h3 class="card-title">{{user.firstName}} {{user.lastName}}</h3>
                    <p class="text-muted">{{user.email}}</p>
                    <span class="badge bg-primary">{{user.role}}</span>
                </div>
            </div>
            
            <div class="list-group shadow-sm">
                <a href="#info" data-bs-toggle="list" class="list-group-item list-group-item-action active">
                    <i class="fa fa-user me-2"></i> Thông tin cá nhân
                </a>

                <a href="#contacts" data-bs-toggle="list" class="list-group-item list-group-item-action">
                    <i class="fa fa-envelope me-2"></i> Liên hệ của tôi
                </a>

                <a href="#reviews" data-bs-toggle="list" class="list-group-item list-group-item-action">
                    <i class="fa fa-star me-2"></i> Đánh giá của tôi
                </a>
                {{#if (eq user.role 'admin')}}
                <a href="/admin" class="list-group-item list-group-item-action text-primary">
                    <i class="fa fa-user-shield me-2"></i> Trang quản trị
                </a>
                {{/if}}
                <a href="/logout" class="list-group-item list-group-item-action text-danger">
                    <i class="fa fa-sign-out-alt me-2"></i> Đăng xuất
                </a>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="tab-content">
                <!-- User Info Tab -->
                <div class="tab-pane fade show active" id="info">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0 fw-bold">Thông tin tài khoản</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-4">
                                <label class="form-label text-muted small text-uppercase">Họ và tên</label>
                                <p class="h6 mb-0">{{user.firstName}} {{user.lastName}}</p>
                            </div>
                            <div class="mb-4">
                                <label class="form-label text-muted small text-uppercase">Email</label>
                                <p class="h6 mb-0">{{user.email}}</p>
                            </div>
                            <div class="mb-4">
                                <label class="form-label text-muted small text-uppercase">Vai trò</label>
                                <p class="h6 mb-0 text-capitalize">{{user.role}}</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase">Ngày tham gia</label>
                                <p class="h6 mb-0">{{formatDate user.createdAt}}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- My Contacts Tab -->
                <div class="tab-pane fade" id="contacts">
                    <div class="card shadow-sm border-0">
                         <div class="card-header bg-white py-3">
                            <h5 class="mb-0 fw-bold">Yêu cầu liên hệ của tôi</h5>
                        </div>
                        <div class="card-body p-0">
                             {{#if contacts}}
                             <div class="table-responsive">
                                 <table class="table table-hover mb-0 align-middle">
                                     <thead class="bg-light">
                                         <tr>
                                             <th class="ps-4">Ngày gửi</th>
                                             <th>Nội dung</th>
                                             <th>Phản hồi công khai</th>
                                             <th>Trạng thái</th>
                                         </tr>
                                     </thead>
                                     <tbody>
                                         {{#each contacts}}
                                         <tr>
                                             <td class="ps-4"><small>{{formatDate this.createdAt}}</small></td>
                                             <td>
                                                 <div style="max-width: 250px;" class="text-truncate">
                                                     <strong>{{this.course}}</strong><br>
                                                     <span class="text-muted small">{{this.message}}</span>
                                                 </div>
                                             </td>
                                             <td>
                                                 {{#if this.adminNotes}}
                                                 <div style="max-width: 250px; white-space: normal;">
                                                     <span class="text-success small fw-bold"><i class="fa fa-reply me-1"></i> Admin:</span>
                                                     <p class="mb-0 small">{{this.adminNotes}}</p>
                                                 </div>
                                                 {{else}}
                                                 <span class="text-muted small italic">Đang chờ phản hồi...</span>
                                                 {{/if}}
                                             </td>
                                             <td>
                                                 {{#if_eq this.status 'new'}}
                                                 <span class="badge rounded-pill bg-info text-dark">Mới</span>
                                                 {{/if_eq}}
                                                 {{#if_eq this.status 'contacted'}}
                                                 <span class="badge rounded-pill bg-success">Đã liên hệ</span>
                                                 {{/if_eq}}
                                                 {{#if_eq this.status 'read'}}
                                                 <span class="badge rounded-pill bg-secondary">Đã xem</span>
                                                 {{/if_eq}}
                                             </td>
                                         </tr>
                                         {{/each}}
                                     </tbody>
                                 </table>
                             </div>
                             {{else}}
                                <div class="text-center py-5">
                                    <i class="fa fa-envelope-open text-muted mb-3" style="font-size: 3rem;"></i>
                                    <p class="text-muted">Bạn chưa gửi yêu cầu liên hệ nào.</p>
                                    <a href="/contact" class="btn btn-primary">Gửi yêu cầu ngay</a>
                                </div>
                             {{/if}}
                        </div>
                    </div>
                </div>

                <!-- My Reviews Tab -->
                <div class="tab-pane fade" id="reviews">
                    <div class="card shadow-sm border-0">
                         <div class="card-header bg-white py-3">
                            <h5 class="mb-0 fw-bold">Đánh giá của tôi</h5>
                        </div>
                        <div class="card-body">
                             {{#if reviews}}
                             <div class="row g-3">
                                 {{#each reviews}}
                                 <div class="col-12">
                                     <div class="p-3 border rounded">
                                         <div class="d-flex justify-content-between align-items-center mb-2">
                                             <div class="text-primary">
                                                 {{#each (range 1 this.rating)}}
                                                 <i class="fa fa-star"></i>
                                                 {{/each}}
                                             </div>
                                             <small class="text-muted">{{formatDate this.createdAt}}</small>
                                         </div>
                                         <p class="mb-1 fw-bold">{{#if this.course}}{{this.course.title}}{{else}}Đánh giá Website{{/if}}</p>
                                         <p class="mb-0 text-muted small">"{{this.comment}}"</p>
                                         {{#unless this.isActive}}
                                         <span class="badge bg-warning text-dark mt-2 small" style="font-size: 0.7rem;">Đang chờ duyệt</span>
                                         {{/unless}}
                                     </div>
                                 </div>
                                 {{/each}}
                             </div>
                             {{else}}
                                <div class="text-center py-5">
                                    <i class="fa fa-star-half-alt text-muted mb-3" style="font-size: 3rem;"></i>
                                    <p class="text-muted">Bạn chưa có đánh giá nào.</p>
                                    <a href="/courses" class="btn btn-primary">Đăng ký và đánh giá ngay</a>
                                </div>
                             {{/if}}
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>
