<!-- Contact Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">{{site.contactSubtitle}}</h6>
            <h1 class="mb-5">{{site.contactTitle}}</h1>
            <p class="mb-5 px-lg-5">{{site.contactDescription}}</p>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <h5>Thông Tin Liên Hệ</h5>
                <p class="mb-4">Chúng tôi luôn sẵn sàng hỗ trợ bạn đạt được mục tiêu tiếng Anh. Liên hệ ngay để được tư vấn!</p>

                <div class="d-flex align-items-center mb-4">
                    <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                        <i class="fa fa-map-marker-alt text-white"></i>
                    </div>
                    <div class="ms-3">
                        <h5 class="text-primary">Văn Phòng Chính</h5>
                        <p class="mb-0">{{site.footerAddress}}</p>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-4">
                    <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                        <i class="fa fa-phone-alt text-white"></i>
                    </div>
                    <div class="ms-3">
                        <h5 class="text-primary">Số Điện Thoại</h5>
                        <p class="mb-0">{{site.footerPhone}}</p>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-4">
                    <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                        <i class="fa fa-envelope-open text-white"></i>
                    </div>
                    <div class="ms-3">
                        <h5 class="text-primary">Địa Chỉ Email</h5>
                        <p class="mb-0">{{site.footerEmail}}</p>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-4">
                    <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                        <i class="fa fa-clock text-white"></i>
                    </div>
                    <div class="ms-3">
                        <h5 class="text-primary">Giờ Làm Việc</h5>
                        <p class="mb-0" style="white-space: pre-line;">{{site.contactWorkingHours}}</p>
                    </div>
                </div>

                <div class="mt-4">
                    <h6 class="text-primary mb-3">Theo Dõi Chúng Tôi</h6>
                    <div class="d-flex">
                        <a class="btn btn-square btn-primary me-2" href="{{site.socialFacebook}}"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-square btn-primary me-2" href="{{site.socialYoutube}}"><i class="fab fa-youtube"></i></a>
                        <a class="btn btn-square btn-primary me-2" href="{{site.socialLinkedin}}"><i class="fab fa-linkedin-in"></i></a>
                        <a class="btn btn-square btn-primary" href="{{site.socialTiktok}}"><i class="fab fa-tiktok"></i></a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                <iframe class="position-relative rounded w-100 h-100"
                        src="{{#if site.contactMapsUrl}}{{{site.contactMapsUrl}}}{{else}}https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.424184103987!2d106.7002501757599!3d10.775974189372122!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f467a87e8c5%3A0xa6cbc5c559a7d4e1!2sNguyen%20Hue%20Street%2C%20District%201%2C%20Ho%20Chi%20Minh%20City%2C%20Vietnam!5e0!3m2!1sen!2s!4v1700000000000!5m2!1sen!2s{{/if}}"
                        frameborder="0" style="min-height: 400px; border:0;" allowfullscreen="" aria-hidden="false"
                        tabindex="0" title="Bản đồ {{site.logoText}}"></iframe>
            </div>

            <div class="col-lg-4 col-md-12 wow fadeInUp" data-wow-delay="0.5s">
                <form action="/contact" method="POST">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="name" name="name" placeholder="Họ và tên" required value="{{#if isLoggedIn}}{{currentUserName}}{{/if}}">
                                <label for="name">Họ và tên *</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="email" class="form-control" id="email" name="email" placeholder="Địa chỉ email" required value="{{#if isLoggedIn}}{{user.email}}{{/if}}">
                                <label for="email">Địa chỉ email *</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="tel" class="form-control" id="phone" name="phone" placeholder="Số điện thoại">
                                <label for="phone">Số điện thoại</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <select class="form-select" id="course" name="course" required>
                                    <option value="" selected disabled>Chọn khóa học quan tâm</option>
                                    <option value="toeic">Luyện thi TOEIC</option>
                                    <option value="ielts">Luyện thi IELTS</option>
                                    <option value="toefl">Luyện thi TOEFL</option>
                                    <option value="business">Tiếng Anh Thương Mại</option>
                                    <option value="general">Tiếng Anh Tổng Quát</option>
                                    <option value="other">Khác</option>
                                </select>
                                <label for="course">Khóa học quan tâm *</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea class="form-control" placeholder="Để lại lời nhắn của bạn tại đây" id="message" name="message" style="height: 120px"></textarea>
                                <label for="message">Lời nhắn của bạn</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100 py-3" type="submit">Gửi Tin Nhắn</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Phương Thức Liên Hệ Khác -->
        <div class="row mt-5">
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="bg-light text-center p-4 rounded shadow-sm border">
                    <i class="fa fa-comments fa-3x text-primary mb-3"></i>
                    <h5>Chat Trực Tuyến</h5>
                    <p class="mb-3 small">Trò chuyện trực tiếp với tư vấn viên</p>
                    <a href="#" class="btn btn-outline-primary px-4">Bắt Đầu Chat</a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="bg-light text-center p-4 rounded shadow-sm border">
                    <i class="fa fa-phone fa-3x text-primary mb-3"></i>
                    <h5>Gọi Điện Thoại</h5>
                    <p class="mb-3 small">Nói chuyện trực tiếp qua Hotline</p>
                    <a href="tel:{{site.footerPhone}}" class="btn btn-outline-primary px-4">Gọi Ngay</a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="bg-light text-center p-4 rounded shadow-sm border">
                    <i class="fa fa-calendar fa-3x text-primary mb-3"></i>
                    <h5>Đặt Lịch Hẹn</h5>
                    <p class="mb-3 small">Tham quan trung tâm & test trình độ</p>
                    <a href="/contact" class="btn btn-outline-primary px-4">Đặt Lịch Ngay</a>
                </div>
            </div>
        </div>

        <!-- FAQ Section -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h6 class="section-title bg-white text-center text-primary px-3">Câu Hỏi Thường Gặp</h6>
                    <h2 class="mb-5">Cần Hỗ Trợ Thêm?</h2>
                </div>
                <div class="accordion" id="faqAccordion">
                    {{#each site.faqs}}
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button {{#unless @first}}collapsed{{/unless}} text-dark" type="button" data-bs-toggle="collapse" data-bs-target="#faq{{@index}}">
                                {{this.question}}
                            </button>
                        </h2>
                        <div id="faq{{@index}}" class="accordion-collapse collapse {{#if @first}}show{{/if}}" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                {{this.answer}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
<!-- Contact End -->