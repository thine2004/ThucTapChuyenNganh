<!-- Cart Section -->
<div class="container-xxl py-5">
    <div class="container">
        <h1 class="mb-5 text-center">Giỏ Hàng Của Bạn</h1>

        <!-- Cart with items -->
        <div class="row">
            <div class="col-lg-8">
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="table-light">
                        <tr>
                            <th scope="col">Khóa Học</th>
                            <th scope="col">Giá</th>
                            <th scope="col">Số Lượng</th>
                            <th scope="col">Tổng</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each cart.items}}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="{{this.thumbnail}}" alt="{{this.title}}" style="width: 80px; height: 60px; object-fit: cover;" class="me-3">
                                    <div>
                                        <span class="fw-bold">{{this.title}}</span>
                                        <br>
                                        <small class="text-muted">{{this.duration}} phút</small>
                                    </div>
                                </div>
                            </td>
                            <td class="fw-bold text-primary">{{this.price}}₫</td>
                            <td>
                                <form action="/cart/update/{{this._id}}" method="POST" class="d-flex align-items-center">
                                    <input type="number" name="quantity" value="{{this.quantity}}" min="1" class="form-control me-2" style="width: 80px;">
                                    <button type="submit" class="btn btn-sm btn-primary">Cập nhật</button>
                                </form>
                            </td>
                            <td class="fw-bold text-primary">{{this.price}}₫ * {{this.quantity}}</td> 
                            <td>
                                <form action="/cart/remove/{{this._id}}" method="POST">
                                    <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="5" class="text-center">Giỏ hàng của bạn đang trống</td>
                        </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>

                <!-- Continue Shopping -->
                <div class="mt-4">
                    <a href="/courses" class="btn btn-outline-primary">
                        <i class="fa fa-arrow-left me-2"></i>Tiếp tục xem khóa học
                    </a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Tóm Tắt Giỏ Hàng</h5>

                        <!-- Subtotal -->
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tạm tính:</span>
                            <span>{{cart.totalPrice}}₫</span>
                        </div>

                        <!-- Discount -->
                        <div class="d-flex justify-content-between mb-2">
                            <span>Giảm giá:</span>
                            <span class="text-success">0₫</span>
                        </div>

                        <!-- Promotion Code -->
                        <div class="mb-3">
                            <label for="promoCode" class="form-label small">Mã khuyến mãi</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="promoCode" placeholder="Nhập mã">
                                <button class="btn btn-outline-primary">Áp dụng</button>
                            </div>
                        </div>

                        <hr>

                        <!-- Total -->
                        <div class="d-flex justify-content-between mb-4">
                            <strong>Tổng cộng:</strong>
                            <strong class="text-primary h5">{{cart.totalPrice}}₫</strong>
                        </div>

                        <!-- Checkout Button -->
                        <a href="/checkout" class="btn btn-primary w-100 py-3 mb-3">
                            <i class="fa fa-credit-card me-2"></i>Tiến Hành Thanh Toán
                        </a>

                        <!-- Security Notice -->
                        <div class="text-center">
                            <small class="text-muted">
                                <i class="fa fa-lock me-1"></i>
                                Thanh toán an toàn & bảo mật
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Special Offers -->
                <div class="card border-0 shadow-sm mt-4">
                    <div class="card-body">
                        <h6 class="card-title mb-3">Ưu Đãi Đặc Biệt</h6>
                        <div class="alert alert-success mb-2">
                            <small><strong>Giảm thêm 5%</strong> khi thanh toán online</small>
                        </div>
                        <div class="alert alert-info mb-0">
                            <small><strong>Miễn phí</strong> tài liệu học tập trị giá 500.000₫</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Courses -->
        <div class="mt-5">
            <h4 class="mb-4">Có Thể Bạn Quan Tâm</h4>
            <div class="row g-3">
                {{#each suggestedCourses}}
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="position-relative overflow-hidden">
                             <img class="img-fluid w-100" src="{{this.thumbnail}}" alt="{{this.title}}" style="height: 150px; object-fit: cover;">
                        </div>
                        <div class="card-body">
                            <h6 class="card-title text-truncate" title="{{this.title}}">{{this.title}}</h6>
                            <p class="card-text text-muted small text-truncate">{{this.description}}</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <strong class="text-primary">{{this.price}}₫</strong>
                                <form action="/cart/add/{{this._id}}" method="POST">
                                    <button type="submit" class="btn btn-sm btn-outline-primary">Thêm vào giỏ</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                {{else}}
                <div class="col-12 text-center">
                    <p class="text-muted">Chưa có khóa học nào để gợi ý.</p>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
