<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý Tài nguyên</h1>
    <a href="/admin/resources/add" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fa fa-plus fa-sm text-white-50"></i> Thêm Tài nguyên mới
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Tài nguyên (Ngữ pháp/Từ vựng)</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="dataTableResources" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Tiêu đề</th>
                    <th>Loại</th>
                    <th>Trạng thái</th>
                    <th>Ngày tạo</th>
                    <th>Hành động</th>
                </tr>
                </thead>
                <tbody>
                {{#each resources}}
                    <tr>
                        <td><strong>{{this.title}}</strong></td>
                        <td>
                            {{#if_eq this.type 'grammar'}}<span class="badge badge-info text-uppercase">Ngữ pháp</span>{{/if_eq}}
                            {{#if_eq this.type 'vocabulary'}}<span class="badge badge-success text-uppercase">Từ vựng</span>{{/if_eq}}
                        </td>
                        <td>
                            {{#if this.isActive}}
                                <span class="badge badge-success">Actived</span>
                            {{else}}
                                <span class="badge badge-secondary">Hidden</span>
                            {{/if}}
                        </td>
                        <td>{{this.createdAt}}</td>
                        <td>
                            <a href="/admin/resources/edit/{{this._id}}" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i></a>
                            <form action="/admin/resources/delete/{{this._id}}?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirm('Xóa tài nguyên này?');">
                                <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                {{else}}
                    <tr>
                        <td colspan="5" class="text-center">Chưa có tài nguyên nào.</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
