<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý Đề luyện thi</h1>
    <a href="/admin/tests/add" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fa fa-plus fa-sm text-white-50"></i> Tạo Đề thi mới
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Đề thi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="dataTableTests" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Tiêu đề</th>
                    <th>Danh mục</th>
                    <th>Số câu hỏi</th>
                    <th>Thời gian</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
                </thead>
                <tbody>
                {{#each tests}}
                    <tr>
                        <td><strong>{{this.title}}</strong></td>
                        <td>{{this.category.name}}</td>
                        <td><span class="badge badge-info">{{this.questions.length}} câu</span></td>
                        <td>{{this.duration}} phút</td>
                         <td>
                            {{#if this.isActive}}
                                <span class="badge badge-success">Actived</span>
                            {{else}}
                                <span class="badge badge-secondary">Hidden</span>
                            {{/if}}
                        </td>
                        <td>
                            <a href="/admin/tests/manage/{{this._id}}" class="btn btn-sm btn-info" title="Quản lý câu hỏi"><i class="fa fa-list"></i> Câu hỏi</a>
                            <a href="/admin/tests/edit/{{this._id}}" class="btn btn-sm btn-warning" title="Sửa"><i class="fa fa-edit"></i></a>
                            <form action="/admin/tests/delete/{{this._id}}?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirm('Xóa đề thi này?');">
                                <button type="submit" class="btn btn-sm btn-danger" title="Xóa"><i class="fa fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                {{else}}
                    <tr>
                        <td colspan="6" class="text-center">Chưa có đề thi nào.</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
