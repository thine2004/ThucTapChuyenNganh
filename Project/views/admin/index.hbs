<!-- ĐÃ XÓA: Breadcrumbs (Vì Layout admin.hbs đã tự động hiển thị dựa trên {{title}}) -->

<!-- Icon Cards-->
<div class="row">
    <!-- Revenue Card -->
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Tổng doanh thu</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{stats.totalRevenue}}₫</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Orders Card -->
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Đơn hàng chờ duyệt</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{stats.pendingOrders}}</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
            <a class="card-footer text-muted small z-1" href="/admin/orders">
                <span class="float-left">Xem chi tiết</span>
                <span class="float-right"><i class="fa fa-angle-right"></i></span>
            </a>
        </div>
    </div>

    <!-- Users Card -->
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Tổng Học viên</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{stats.userCount}}</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Card -->
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Tổng Khóa học</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{stats.courseCount}}</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-book fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <!-- Area Chart -->
    <div class="col-lg-8">
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-white">
                <i class="fa fa-history"></i> Đơn hàng gần đây
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Mã đơn</th>
                                <th>Khách hàng</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each latestOrders}}
                            <tr>
                                <td><small>#{{this._id}}</small></td>
                                <td>{{this.user.firstName}} {{this.user.lastName}}</td>
                                <td>{{this.totalAmount}}₫</td>
                                <td>
                                    {{#if (eq this.status 'completed')}}
                                        <span class="badge badge-success">Thành công</span>
                                    {{else if (eq this.status 'pending')}}
                                        <span class="badge badge-warning">Chờ duyệt</span>
                                    {{else}}
                                        <span class="badge badge-danger">Đã hủy</span>
                                    {{/if}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white small">
                <a href="/admin/orders">Xem tất cả đơn hàng</a>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-lg-4">
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-white">
                <i class="fa fa-bolt"></i> Thao tác nhanh
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="/admin/product/add" class="list-group-item list-group-item-action">
                        <i class="fa fa-plus-circle text-primary mr-2"></i> Thêm Khóa học mới
                    </a>
                    <a href="/admin/questions/add" class="list-group-item list-group-item-action">
                        <i class="fa fa-question-circle text-success mr-2"></i> Thêm Câu hỏi thi
                    </a>
                    <a href="/admin/users/add?role=user" class="list-group-item list-group-item-action">
                        <i class="fa fa-user-plus text-info mr-2"></i> Đăng ký học viên
                    </a>
                    <a href="/admin/resources/add" class="list-group-item list-group-item-action">
                        <i class="fa fa-file-text text-warning mr-2"></i> Thêm Tài liệu
                    </a>
                </div>
            </div>
        </div>
        
        <div class="card shadow-sm">
             <div class="card-header bg-white">
                <i class="fa fa-envelope"></i> Phản hồi hệ thống
            </div>
            <div class="card-body text-center py-4">
                <div class="h3 font-weight-bold text-danger">{{stats.newContacts}}</div>
                <div class="text-muted small">Liên hệ mới cần xử lý</div>
                <hr>
                <a href="/admin/contacts" class="btn btn-sm btn-outline-danger">Xem ngay</a>
            </div>
        </div>
    </div>
</div>