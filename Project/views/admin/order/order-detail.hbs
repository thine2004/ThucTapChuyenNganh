<div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="m-0 font-weight-bold text-primary">Chi tiết Đơn hàng #{{order._id}}</h3>
    <a href="/admin/orders" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Quay lại</a>
</div>

<div class="row">
    <!-- Thông tin khách hàng -->
    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="m-0"><i class="fa fa-user"></i> Thông tin Khách hàng</h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th width="30%">ID:</th>
                        <td>{{order.user._id}}</td>
                    </tr>
                    <tr>
                        <th>Họ tên:</th>
                        <td><strong>{{order.user.firstName}} {{order.user.lastName}}</strong></td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td>{{order.user.email}}</td>
                    </tr>
                    <tr>
                        <th>Số điện thoại:</th>
                        <td>{{#if order.user.phone}}{{order.user.phone}}{{else}}<em>Chưa cập nhật</em>{{/if}}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <!-- Thông tin đơn hàng -->
    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-header bg-success text-white">
                <h5 class="m-0"><i class="fa fa-info-circle"></i> Thông tin chung</h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">Ngày đặt:</th>
                        <td>{{order.createdAt}}</td>
                    </tr>
                    <tr>
                        <th>Trạng thái:</th>
                        <td>
                            {{#if (eq order.status 'completed')}}
                                <span class="badge badge-success px-3 py-2">Hoàn thành</span>
                            {{else if (eq order.status 'pending')}}
                                <span class="badge badge-warning px-3 py-2">Chờ xử lý</span>
                            {{else}}
                                <span class="badge badge-danger px-3 py-2">Đã hủy</span>
                            {{/if}}
                        </td>
                    </tr>
                    <tr>
                        <th>Phương thức TT:</th>
                        <td>
                            <span class="text-uppercase font-weight-bold">{{order.paymentMethod}}</span>
                        </td>
                    </tr>
                    <tr>
                        <th>Tổng tiền:</th>
                        <td class="text-danger font-weight-bold h5 mb-0">{{order.totalAmount}}₫</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Danh sách sản phẩm -->
<div class="card shadow-sm mb-4">
    <div class="card-header border-bottom-0">
        <h5 class="m-0 font-weight-bold text-dark"><i class="fa fa-list"></i> Danh sách Khóa học</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>STT</th>
                        <th>Hình ảnh</th>
                        <th>Tên khóa học</th>
                        <th>Giá gốc</th>
                        <th>Giá mua</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each order.items}}
                    <tr>
                        <td>{{addOne @index}}</td>
                        <td>
                            <img src="{{this.course.thumbnail}}" alt="Course Thumb" style="width: 60px; height: 40px; object-fit: cover; border-radius: 4px;">
                        </td>
                        <td>
                            <a href="/courses/{{this.course._id}}" target="_blank"><strong>{{this.course.title}}</strong></a>
                        </td>
                        <td class="text-muted"><del>{{this.course.originalPrice}}₫</del></td>
                        <td class="text-primary font-weight-bold">{{this.price}}₫</td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="bg-light">
                        <td colspan="4" class="text-right font-weight-bold">TỔNG CỘNG:</td>
                        <td class="text-danger font-weight-bold h5">{{order.totalAmount}}₫</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<!-- Actions -->
<div class="card shadow-sm">
    <div class="card-body d-flex justify-content-end">
         <form action="/admin/orders/delete/{{order._id}}" method="POST" onsubmit="return confirm('Bạn có chắc chắn muốn xóa đơn hàng này?');">
            <button type="submit" class="btn btn-danger mr-2">
                <i class="fa fa-trash"></i> Xóa Đơn hàng
            </button>
        </form>
        
        <div class="dropdown">
            <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown">
                <i class="fa fa-edit"></i> Cập nhật Trạng thái
            </button>
            <div class="dropdown-menu">
                <form action="/admin/orders/update-status/{{order._id}}" method="POST">
                    <input type="hidden" name="status" value="completed">
                    <button type="submit" class="dropdown-item text-success">Hoàn thành</button>
                </form>
                <form action="/admin/orders/update-status/{{order._id}}" method="POST" class="mt-1">
                    <input type="hidden" name="status" value="pending">
                    <button type="submit" class="dropdown-item text-warning">Chờ xử lý</button>
                </form>
                <form action="/admin/orders/update-status/{{order._id}}" method="POST" class="mt-1">
                    <input type="hidden" name="status" value="cancelled">
                    <button type="submit" class="dropdown-item text-danger">Hủy đơn</button>
                </form>
            </div>
        </div>
    </div>
</div>
