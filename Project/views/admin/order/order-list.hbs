<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-shopping-cart"></i> Danh sách Đơn hàng
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã Đơn</th>
                        <th>Khách hàng</th>
                        <th>Khóa học</th>
                        <th>Tổng tiền</th>
                        <th>Ngày đặt</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td><small>#{{this._id}}</small></td>
                        <td>
                            <strong>{{this.user.firstName}} {{this.user.lastName}}</strong><br>
                            <small class="text-muted">{{this.user.email}}</small>
                        </td>
                        <td>
                            <ul class="list-unstyled mb-0">
                                {{#each this.items}}
                                <li>- {{this.course.title}}</li>
                                {{/each}}
                            </ul>
                        </td>
                        <td class="text-primary fw-bold">{{this.totalAmount}}₫</td>
                        <td>{{this.createdAt}}</td>
                        <td>
                            {{#if (eq this.status 'completed')}}
                                <span class="badge badge-success">Hoàn thành</span>
                            {{else if (eq this.status 'pending')}}
                                <span class="badge badge-warning">Chờ xử lý</span>
                            {{else}}
                                <span class="badge badge-danger">Đã hủy</span>
                            {{/if}}
                        </td>
                        <td>
                            <a href="/admin/orders/detail/{{this._id}}" class="btn btn-sm btn-primary" title="Xem chi tiết">
                                <i class="fa fa-eye"></i>
                            </a>
                            
                            <div class="dropdown d-inline-block">
                                <button class="btn btn-sm btn-info dropdown-toggle" type="button" data-toggle="dropdown" title="Cập nhật trạng thái">
                                    <i class="fa fa-edit"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <form action="/admin/orders/update-status/{{this._id}}" method="POST">
                                        <input type="hidden" name="status" value="completed">
                                        <button type="submit" class="dropdown-item text-success">Hoàn thành</button>
                                    </form>
                                    <form action="/admin/orders/update-status/{{this._id}}" method="POST" class="mt-1">
                                        <input type="hidden" name="status" value="pending">
                                        <button type="submit" class="dropdown-item text-warning">Chờ xử lý</button>
                                    </form>
                                    <form action="/admin/orders/update-status/{{this._id}}" method="POST" class="mt-1">
                                        <input type="hidden" name="status" value="cancelled">
                                        <button type="submit" class="dropdown-item text-danger">Hủy đơn</button>
                                    </form>
                                </div>
                            </div>

                            <form action="/admin/orders/delete/{{this._id}}" method="POST" class="d-inline-block" onsubmit="return confirm('Bạn có chắc chắn muốn xóa đơn hàng này?');">
                                <button type="submit" class="btn btn-sm btn-danger" title="Xóa đơn hàng">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
