<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý Bài học</h1>
     <a href="/admin/lessons/add" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fa fa-plus fa-sm text-white-50"></i> Thêm Bài học mới
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Bài học</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="dataTableLessons" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Khóa học</th>
                    <th>Tiêu đề Bài học</th>
                    <th>Thứ tự</th>
                    <th>Thời lượng</th>
                    <th>Học thử</th>
                    <th>Hành động</th>
                </tr>
                </thead>
                <tbody>
                {{#each lessons}}
                    <tr>
                        <td>{{this.course.title}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.position}}</td>
                        <td>{{this.duration}} phút</td>
                        <td>
                            {{#if this.isFree}}
                                <span class="badge badge-success">Có</span>
                            {{else}}
                                <span class="badge badge-secondary">Không</span>
                            {{/if}}
                        </td>
                        <td>
                            <a href="/admin/lessons/edit/{{this._id}}" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i></a>
                            <form action="/admin/lessons/delete/{{this._id}}" method="POST" style="display:inline;" onsubmit="return confirm('Xóa bài học này?');">
                                <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                {{else}}
                    <tr>
                        <td colspan="6" class="text-center">Chưa có bài học nào.</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
