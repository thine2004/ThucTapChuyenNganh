<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Thêm Câu hỏi mới</h1>
    <a href="/admin/questions" class="btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Quay lại
    </a>
</div>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Nội dung câu hỏi</h6>
            </div>
            <div class="card-body">
                <form action="/admin/questions/add" method="POST">
                    <div class="form-group">
                        <label for="content">Câu hỏi <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="type">Loại câu hỏi</label>
                            <select class="form-control" id="type" name="type">
                                <option value="multiple_choice">Trắc nghiệm (4 đáp án)</option>
                                {{!-- <option value="fill_in_blank">Điền từ</option> --}}
                                {{!-- <option value="listening">Nghe</option> --}}
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="level">Độ khó</label>
                            <select class="form-control" id="level" name="level">
                                <option value="easy">Dễ</option>
                                <option value="medium" selected>Trung bình</option>
                                <option value="hard">Khó</option>
                            </select>
                        </div>
                    </div>

                    <hr>
                    <h6 class="font-weight-bold text-secondary">Đáp án (Chọn radio button cho đáp án đúng)</h6>
                    
                    <div class="form-group row">
                        <div class="col-md-1">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="correctOption" value="0" checked>
                            </div>
                        </div>
                        <div class="col-md-11">
                            <input type="text" class="form-control" name="options[]" placeholder="Đáp án A" required>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-md-1">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="correctOption" value="1">
                            </div>
                        </div>
                        <div class="col-md-11">
                            <input type="text" class="form-control" name="options[]" placeholder="Đáp án B" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-1">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="correctOption" value="2">
                            </div>
                        </div>
                        <div class="col-md-11">
                            <input type="text" class="form-control" name="options[]" placeholder="Đáp án C" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-1">
                             <div class="form-check">
                                <input class="form-check-input" type="radio" name="correctOption" value="3">
                            </div>
                        </div>
                        <div class="col-md-11">
                            <input type="text" class="form-control" name="options[]" placeholder="Đáp án D" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="explanation">Giải thích đáp án (tùy chọn)</label>
                        <textarea class="form-control" id="explanation" name="explanation" rows="2"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Lưu Câu hỏi</button>
                </form>
            </div>
        </div>
    </div>
</div>
