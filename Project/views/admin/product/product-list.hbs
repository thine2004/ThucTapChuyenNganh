<!-- ĐÃ XÓA: Breadcrumbs (Layout đã tự động xử lý) -->

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý Khóa học</h1>
    <a href="/admin/product/add" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fa fa-plus fa-sm text-white-50"></i> Thêm Khóa học mới
    </a>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Khóa học</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Hình ảnh</th>
                    <th>Tên khóa học</th>
                    <th>Danh mục</th>
                    <th>Giá</th>
                    <th>Thời lượng</th>
                    <th>Trình độ</th>
                    <th>Hình thức học</th>
                    <th>Đánh giá</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
                </thead>
                <tbody>
                {{#each products}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>
                        <img src="{{this.thumbnail}}" alt="{{this.title}}" style="width: 60px; height: 40px; object-fit: cover; border-radius: 4px;">
                    </td>
                    <td><strong>{{this.title}}</strong></td>
                    <td>{{this.category.name}}</td>
                    <td>
                        <strong class="text-success">{{this.price}}₫</strong>
                        {{#if this.originalPrice}}
                        <br>
                        <small class="text-muted"><del>{{this.originalPrice}}₫</del></small>
                        {{/if}}
                    </td>
                    <td>{{this.duration}} phút</td>
                    <td>
                        {{#if_eq this.level 'beginner'}}
                            <span class="badge badge-info">Cơ bản</span>
                        {{else if_eq this.level 'intermediate'}}
                            <span class="badge badge-primary">Trung cấp</span>
                        {{else if_eq this.level 'advanced'}}
                            <span class="badge badge-danger">Nâng cao</span>
                        {{else}}
                            <span class="badge badge-secondary">Tất cả</span>
                        {{/if_eq}}
                    </td>
                    <td>
                        {{#if_eq this.teachingMethod 'online'}}
                            <span class="badge badge-success">Online</span>
                        {{else if_eq this.teachingMethod 'offline'}}
                            <span class="badge badge-warning">Offline</span>
                        {{else if_eq this.teachingMethod 'hybrid'}}
                            <span class="badge badge-info">Hybrid</span>
                        {{else}}
                            <span class="badge badge-secondary">Tất cả</span>
                        {{/if_eq}}
                    </td>
                    <td>
                        <i class="fa fa-star text-warning"></i> {{this.averageRating}}
                    </td>
                    <td>
                        {{#if_eq this.status 'available'}}
                            <span class="badge badge-success">Còn khóa</span>
                        {{else}}
                            <span class="badge badge-warning">Hết khóa</span>
                        {{/if_eq}}
                        <br>
                        {{#if this.isActive}}
                            <span class="badge badge-primary mt-1">Hoạt động</span>
                        {{else}}
                            <span class="badge badge-secondary mt-1">Tạm ẩn</span>
                        {{/if}}
                    </td>
                    <td>
                        <a href="/admin/product/edit/{{this._id}}" class="btn btn-sm btn-warning">
                            <i class="fa fa-edit"></i> Sửa
                        </a>
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash"></i> Xóa
                        </button>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="11" class="text-center">Chưa có khóa học nào được tìm thấy </td>
                </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>