<!-- JAVASCRIPT ĐỂ KHỞI TẠO VÀ HIỂN THỊ TOAST -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const toastEl = document.getElementById('liveToast');
        // Kiểm tra nếu phần tử toast và thông báo (message) tồn tại
        if (toastEl) {
            // Khởi tạo đối tượng Toast của Bootstrap
            const toast = new bootstrap.Toast(toastEl, {
                autohide: true,
                delay: 5000 // Tự động ẩn sau 5 giây
            });
            // Hiển thị toast
            toast.show();
        }
    });
</script>
